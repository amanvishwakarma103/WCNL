    function runProgram() {
      let out = "";

      // 1ï¸âƒ£ VARIABLES & OPERATORS
      let a = 10, b = 5;
      let sum = a + b;
      let product = a * b;
      out += "1ï¸âƒ£ Variables & Operators:\n";
      out += `a = ${a}, b = ${b}\n`;
      out += `Sum = ${sum}, Product = ${product}\n\n`;

      // 2ï¸âƒ£ CONDITIONS
      out += "2ï¸âƒ£ Conditions:\n";
      if (a > b) {
        out += "a is greater than b\n\n";
      } else {
        out += "b is greater than or equal to a\n\n";
      }

      // 3ï¸âƒ£ LOOPS
      out += "3ï¸âƒ£ Loops:\n";
      for (let i = 1; i <= 5; i++) {
        out += `Loop count: ${i}\n`;
      }
      out += "\n";

      // 4ï¸âƒ£ FUNCTIONS
      out += "4ï¸âƒ£ Functions:\n";
      function multiply(x, y) {
        return x * y;
      }
      out += `Multiplication (4 * 3): ${multiply(4, 3)}\n\n`;

      // 5ï¸âƒ£ EVENTS (Handled by button click)
      out += "5ï¸âƒ£ Events:\nThis program runs when you click the button!\n\n";

      // 6ï¸âƒ£ CLASSES & OBJECTS
      out += "6ï¸âƒ£ Classes & Objects:\n";
      class Student {
        constructor(name, marks) {
          this.name = name;
          this.marks = marks;
        }
        display() {
          return `${this.name} scored ${this.marks} marks.`;
        }
      }
      const s1 = new Student("Aman", 92);
      out += s1.display() + "\n\n";

      // 7ï¸âƒ£ ERROR HANDLING
      out += "7ï¸âƒ£ Error Handling:\n";
      try {
        let result = 10 / 0;
        if (!isFinite(result)) throw "Division by zero!";
      } catch (err) {
        out += "Error caught: " + err + "\n\n";
      }

      // 8ï¸âƒ£ VALIDATION
      out += "8ï¸âƒ£ Validation:\n";
      let email = "aman@example.com";
      let emailPattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;
      if (email.match(emailPattern)) {
        out += "Valid Email Address âœ…\n\n";
      } else {
        out += "Invalid Email Address âŒ\n\n";
      }

      // 9ï¸âƒ£ ARRAYS
      out += "9ï¸âƒ£ Arrays:\n";
      let fruits = ["Apple", "Banana", "Cherry"];
      fruits.push("Mango");
      out += "Fruits: " + fruits.join(", ") + "\n\n";

      // ğŸ”Ÿ STRINGS
      out += "ğŸ”Ÿ Strings:\n";
      let str = "JavaScript Programming";
      out += `Original: ${str}\nUppercase: ${str.toUpperCase()}\nSubstring: ${str.substring(0, 10)}\n\n`;

      // 1ï¸âƒ£1ï¸âƒ£ DATE
      out += "1ï¸âƒ£1ï¸âƒ£ Date:\n";
      let today = new Date();
      out += `Today's Date: ${today.toDateString()}\nCurrent Time: ${today.toLocaleTimeString()}\n`;

      document.getElementById("output").textContent = out;
    }
  </script>
