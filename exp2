        <h2>Fonts</h2>
        <p class="font-demo">This text demonstrates different font families, sizes, weights, and styles.</p>
        <p class="google-font">This uses a Google Font.</p>
    </section>

    <section id="lists">
        <h2>Lists</h2>
        <ul class="custom-list">
            <li>Unordered list item 1</li>
            <li>Unordered list item 2</li>
            <li>Unordered list item 3</li>
        </ul>
        <ol class="custom-ordered-list">
            <li>Ordered list item 1</li>
            <li>Ordered list item 2</li>
            <li>Ordered list item 3</li>
        </ol>
    </section>

    <section id="tables">
        <h2>Tables</h2>
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Header 1</th>
                    <th>Header 2</th>
                    <th>Header 3</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Data 1</td>
                    <td>Data 2</td>
                    <td>Data 3</td>
                </tr>
                <tr>
                    <td>Data 4</td>
                    <td>Data 5</td>
                    <td>Data 6</td>
                </tr>
            </tbody>
        </table>
    </section>

    <section id="selectors">
        <h2>CSS3 Selectors</h2>
        <div class="selector-demo">
            <p class="first-child">First child paragraph</p>
            <p>Second paragraph</p>
            <p class="nth-child">Third paragraph (nth-child)</p>
            <p data-attr="value">Paragraph with attribute selector</p>
        </div>
    </section>

    <section id="pseudo-classes">
        <h2>Pseudo Classes</h2>
        <a href="#" class="link">Hover over this link</a>
        <input type="text" placeholder="Focus on this input">
        <button class="btn">Click me</button>
    </section>

    <section id="pseudo-elements">
        <h2>Pseudo Elements</h2>
        <p class="pseudo-demo">This paragraph uses ::before and ::after pseudo-elements.</p>
        <blockquote class="quote">This is a blockquote with ::first-letter styling.</blockquote>
    </section>

